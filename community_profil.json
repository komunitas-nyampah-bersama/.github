  "operational_framework": {
    "2bcycle_system": {
      "blockcycle": {
        "definition": "Fase penjagaan nilai dan verifikasi proses limbah organik",
        "process": [
          "Identifikasi dan pemisahan sisa dapur",
          "Penyimpanan 3-7 hari",
          "Pencatatan digital sebagai aset",
          "Pembentukan Proof of Clean Act (PoCA)"
        ],
        "philosophy": "Melihat sampah sebagai aset yang membutuhkan pemeliharaan"
      },
      "burncycle": {
        "definition": "Transformasi nilai limbah menjadi aset digital",
        "process": [
          "Verifikasi penyelesaian BlockCycle",
          "Aksi akhir (pengomposan, panen maggot)",
          "Pencatatan data digital",
          "Perhitungan dan distribusi reward (NFT, token)",
          "Fungsi burn untuk stabilisasi nilai token"
        ],
        "smart_contracts": ["BurnCycleDEX.sol", "BlockVerifier.sol", "PoCA.sol"]
      },
      "poav": {
        "definition": "Proof of Attention Value - Mekanisme penghargaan aksi nyata",
        "value_formula": "Nilai = (QAV × T × F)",
        "components": {
          "QAV": "Quantum of Attention Value (nilai unit terkecil aksi)",
          "T": "Total Score (kuantitas, dampak sosial, validasi bukti, konteks)",
          "F": "Factor Multiplier (berdasarkan level kontributor)"
        }
      }
    },
    "tokenomics": {
      "token_name": "NyampahCoin",
      "standard": "ERC-20",
      "utility": [
        "Reward untuk aksi lingkungan",
        "Akses ke layanan komunitas",
        "Pertukaran dengan produk/pulsa"
      ],
      "distribution_mechanism": "Melalui verifikasi BurnCycle"
    },
    "tech_stack": {
      "web3_integration": {
        "nft_mini_apps": "HTML-Based NFT Mini-Apps di IPFS",
        "account_abstraction": "ERC-4337 Smart Contract Accounts",
        "decentralized_storage": "IPFS/Arweave untuk DApp frontend dan metadata NFT"
      },
      "serverless_backend": "Edge Functions untuk verifikasi data dan integrasi API"
    }
  },

